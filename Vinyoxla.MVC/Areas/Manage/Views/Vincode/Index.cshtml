@model PaginationList<VinCodeGetVM>

<style>
    .keeperadminphone {
        display: flex;
        justify-content: start;
        align-items: center;
    }

        .keeperadminphone input {
            border: none;
            outline: none;
            padding: 5px;
            color: black;
            letter-spacing: 2px;
        }

        .keeperadminphone span {
            border-right: 0.5px solid #d1d3e2;
            padding-right: 5px;
            color: black;
            font-size: 16px;
            letter-spacing: 2px;
        }

    input {
        color: black;
        font-size: 16px;
        width: 100%;
        letter-spacing: 2px;
    }

    .forcheck {
        width: 100%;
        max-height: 200px;
        overflow-y: scroll;
        padding: 15px 5px;
        border: 1px solid grey;
        display: none;
    }
</style>

<div class="main-panel ">
    <div class="content-wrapper pt-0 pb-2">
        <div class="container">
            <div class="row d-flex flex-wrap justify-content-between align-items-center mb-2">
                <div class="col-lg-10 col-12">
                    <form class="row justify-content-between align-items-center col-lg-12 col-12">
                        <div class="col-lg-2 col-2 align-items-center py-1 d-flex justify-content-between">
                            <label class="form-label p-0 m-0 pr-2">Show:</label>
                            <select id="select" name="select" class="form-select form-control">
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="40">40</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <script>
                                let selectvalue = "@ViewBag.Select"

                                let selectoption = document.getElementById("select")

                                selectoption.value = selectvalue
                            </script>
                        </div>
                        <div class="col-lg-8 col-3 align-items-center py-1">
                            <input autocomplete="off" maxlength="17" type="text" name="vin"
                                   class="form-control" id="findvin" value="@ViewBag.Vin"
                                   placeholder="Enter vin code">
                        </div>
                        <div class="col-lg-1 col-3">
                            <button class="btn btn-primary" type="submit">Filter</button>
                        </div>
                        <div class="col-lg-1 col-3">
                            <button class="btn btn-danger" id="clearform" type="reset">Clear</button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-1 col-1">
                    <a class="btn btn-warning" id="clickforcheck" asp-area="Manage" asp-controller="Vincode" asp-action="Check">Check</a>
                </div>
                <div class="col-lg-1 col-2">
                    <a class="btn btn-success" asp-area="Manage" asp-controller="Relation"
                       asp-action="Create">Create</a>
                </div>
                <div class="col-lg-12 col-12 forcheck" id="forcheck">
                    <div class="col-lg-12 col-12 forcheckinichi d-flex justify-content-between align-items-baseline flex-wrap" id="forcheckinichi">

                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    @await Html.PartialAsync("_VincodeIndexPartial", Model)
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center w-100 align-items-center d-flex mt-2">
        <ul class="pagination d-flex justify-content-center align-content-center">
            @if (Model.HasPrev)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Manage"
                       asp-controller="Vincode" asp-action="Index" asp-route-select="@ViewBag.Select"
                       asp-route-vin="@ViewBag.Vin" asp-route-page="1">@("<<")</a>
                </li>

                <li class="page-item">
                    <a class="page-link" asp-area="Manage"
                       asp-controller="Vincode" asp-action="Index" asp-route-select="@ViewBag.Select"
                       asp-route-vin="@ViewBag.Vin" asp-route-page="@(Model.Page-1)">@("<")</a>
                </li>
            }
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(Model.Page == i ? "active":"")">
                    <a class="page-link" asp-area="Manage" asp-controller="Vincode" asp-action="Index"
                       asp-route-select="@ViewBag.Select" asp-route-vin="@ViewBag.Vin" asp-route-page="@i">@i</a>
                </li>
            }
            @if (Model.HasNext)
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Manage" asp-controller="Vincode"
                       asp-action="Index" asp-route-select="@ViewBag.Select" asp-route-vin="@ViewBag.Vin"
                       asp-route-page="@(Model.Page+1)">@(">")</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-area="Manage" asp-controller="Vincode"
                       asp-action="Index" asp-route-select="@ViewBag.Select" asp-route-vin="@ViewBag.Vin"
                       asp-route-page="@Model.PageCount">@(">>")</a>
                </li>
            }
        </ul>
    </div>
</div>